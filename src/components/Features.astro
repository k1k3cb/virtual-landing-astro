---
import { features } from '../constants/features';
---

<section class='relative mt-20 border-b border-neutral-800 min-h-[800px]'>
  <div class='text-center'>
    <span
      class='bg-neutral-900 text-orange-500 rounded-full h-6 text-sm font-medium px-2 py-1 uppercase'
    >
      Feature
    </span>
    <h2 class='text-3xl sm:text-5xl lg:text-6xl mt-10 lg:mt-20 tracking-wide'>
      Easily build
      <span
        class='bg-gradient-to-r from-orange-500 to-orange-800 text-transparent bg-clip-text'
      >
        your code
      </span>
    </h2>
  </div>
  <div class='flex flex-wrap mt-10 lg:mt-20'>
    {
      features.map(feature => (
        <div class='w-full sm:w-1/2 lg:w-1/3'>
          <div class='flex items-start'>
            <img src={feature.icon} alt='' class='mr-2 stroke-cyan-500' />

            <div>
              <h5 class=' mb-6 text-xl'>{feature.text}</h5>
              <p class='text-md p-2 mb-20 text-neutral-500'>
                {feature.description}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
