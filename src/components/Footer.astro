---
import { communityLinks, platformLinks, resourcesLinks } from "../constants/links";
---

<footer class="mt-20 border-t p-10 border-neutral-700">
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
      <div>
        <h3 class="text-md font-semibold mb-4">Resources</h3>
        <ul class="space-y-2">
          {resourcesLinks.map((link) => (
            <li >
              <a
                href={link.href}
                class="text-neutral-300 hover:text-white"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-md font-semibold mb-4">Platform</h3>
        <ul class="space-y-2">
          {platformLinks.map((link) => (
            <li >
              <a
                href={link.href}
                class="text-neutral-300 hover:text-white"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-md font-semibold mb-4">Community</h3>
        <ul class="space-y-2">
          {communityLinks.map((link) => (
            <li >
              <a
                href={link.href}
                class="text-neutral-300 hover:text-white"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </footer>